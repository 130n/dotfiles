#functions
function nyps-ssh {
  ssh -t $@ 'echo -ne "\033]0;"$USER@$HOSTNAME"\007";/bin/bash'
}

function longest-filenames () {
	find . -type f -mtime -14 | sed 's/.*\///' | grep $1 | awk '{ print length, $0 }' | sort -n -s | cut -d" " -f2-
}
